<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="project_task_ext_form_view">
			<field name="name">project.task.ext.form.view</field>
			<field name="model">project.task</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="project.view_task_form2" />
			<field name="arch" type="xml">
				<field name="progress" position="after"> 
                    <group colspan="4" col="4" name="estimations">
                        <separator colspan="4" string="Estimated Products"/>
                        <field name="cost_product_name" />
                        <field name="sale_product_name" />
                    </group>				
				</field> 							
			</field>
		</record>
	</data>
</openerp>