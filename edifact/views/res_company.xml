<?xml version="1.0"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_company_form">
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form" />
            <field name="arch" type="xml">
                <page string="Configuration" position="inside">
                    <group name="edi_configuration">
                        <separator string="EDI parameters" colspan="2"/>
                        <group>
                            <field name="user_id"/>
                        </group>
                        <group>
                            <field name="in_path"/>
                            <field name="out_path"/>
                            <field name="duplicated_path"/>
                        </group>
                    </group>
                </page>
            </field>
        </record>
    </data>
</openerp>
