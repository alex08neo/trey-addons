<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="email_layout">
            <span t-raw="docs"/>
        </template>
        <template id="email_invite_default">
            <span t-raw="docs"/>
        </template>
        <template id="wizard_user_subject">
            Your account at <t t-esc="company"/>
        </template>
        <template id="wizard_user_body_html">
            <pre>
                Dear <t t-esc="name"/>,
                You have been given access to <t t-esc="company"/>'s <t t-esc="portal"/>.
                Your login account data is:
                Username: <t t-esc="login"/>
                Portal: <t t-esc="portal_url"/>
                Database: <t t-esc="db"/>
                You can set or change your password via the following url:
                <t t-esc="signup_url"/>
                <t t-esc="welcome_message"/>
            </pre>
        </template>
    </data>
</openerp>
