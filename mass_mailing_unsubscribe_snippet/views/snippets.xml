<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="email_designer_snippets" inherit_id="website_mail.email_designer_snippets">
            <xpath expr="//div[@id='snippet_email_structure']" position="inside">
                <div>
                    <div class="oe_snippet_thumbnail">
                        <img class="oe_snippet_thumbnail_img" src="/mass_mailing_unsubscribe_snippet/static/src/img/snippet_mail_unsubscribe_link.png"/>
                        <span class="oe_snippet_thumbnail_title">Click to unsubscribe</span>
                    </div>
                    <div class="oe_snippet_body text-center" style="padding:0px; margin:0px">
                        <table cellpadding="0" cellspacing="0" style="margin:10px 0px 0px;vertical-align:top;padding:0px;font-family:arial;font-size:12px;color:rgb(51,51,51)">
                            <tbody>
                                <tr>
                                    <td style="width:600px" valign="center"><a class="btn btn-link" href="/UNSUBSCRIBE_URL">Click to unsubscribe</a></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</openerp>
