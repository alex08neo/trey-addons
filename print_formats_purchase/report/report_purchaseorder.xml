<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Cabecera Presupuesto/Pedido Compra -->
        <template id="purchaseorder_header">
            <div class="row">
                <div class="col-xs-12">
                    <h2>
                        <span>Purchase Order NÂ°</span>
                        <span t-field="o.name"/>
                    </h2>
                </div>
            </div>
        </template>
        <!-- Cabecera Secundaria Presupuesto/Pedido Compra -->
        <template id="purchaseorder_subheader">
            <div class="row mb16">
                <div id="informations" class="col-xs-4 details">
                    <table class="table table-condensed table-unstyled">
                        <tbody>
                            <tr t-if="o.date_order">
                                <td style="width: 55%;">
                                    <span>Date</span>:
                                </td>
                                <td style="width: 45%;">
                                    <span t-field="o.date_order" t-field-options='{"widget":"date"}'/>
                                </td>
                            </tr>
                            <tr t-if="o.name">
                                <td>
                                    <span>Our Reference</span>:
                                </td>
                                <td>
                                    <span t-field="o.name"/>
                                </td>
                            </tr>
                            <tr t-if="o.partner_ref">
                                <td>
                                    <span>Your Reference</span>:
                                </td>
                                <td>
                                    <span t-field="o.partner_ref"/>
                                </td>
                            </tr>
                            <tr t-if="o.validator">
                                <td>
                                    <span>Validated By</span>:
                                </td>
                                <td>
                                    <span t-field="o.validator"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-xs-4 shipping-address">
                    <t t-if="o.dest_address_id">
                        <t t-set="shipping_address"
                           t-value="o.dest_address_id"/>
                    </t>
                    <t t-if="not o.dest_address_id and o.picking_type_id and o.picking_type_id.warehouse_id">
                        <t t-set="shipping_address_name"
                           t-value="o.picking_type_id.warehouse_id.name"/>
                        <t t-set="shipping_address"
                           t-value="o.picking_type_id.warehouse_id.partner_id"/>
                    </t>

                    <table class="table table-condensed table-unstyled">
                        <tbody>
                            <tr>
                                <td colspan="2">
                                    <strong>Shipping address</strong>
                                </td>
                            </tr>
                            <tr t-if="shipping_address">
                                <td style="width: 25%;">
                                    <span>Partner</span>
                                </td>
                                <td style="width: 75%;">
                                    <span t-if="shipping_address.name"
                                          t-field="shipping_address.name"/>
                                    <br/>
                                </td>
                            </tr>
                            <tr t-if="shipping_address.vat">
                                <td>
                                    <span>VAT</span>
                                </td>
                                <td>
                                    <span t-field="shipping_address.vat"/>
                                </td>
                            </tr>
                            <tr t-if="shipping_address">
                                <td>
                                    <span>Address</span>
                                </td>
                                <td>
                                    <t t-if="shipping_address.street">
                                        <span t-field="shipping_address.street"/>
                                        <br/>
                                    </t>
                                    <t t-if="shipping_address.street2">
                                        <span t-field="shipping_address.street2"/>
                                        <br/>
                                    </t>
                                    <t t-if="shipping_address.zip or shipping_address.city">
                                        <t t-if="shipping_address.zip">
                                            <span t-field="shipping_address.zip"/>
                                        </t>
                                        <t t-if="shipping_address.city">
                                            <span t-field="shipping_address.city"/>
                                        </t>
                                        <br/>
                                    </t>
                                    <t t-if="shipping_address.state_id or shipping_address.country_id">
                                        <t t-if="shipping_address.state_id">
                                            <span t-field="shipping_address.state_id.name"/>
                                        </t>
                                        <t t-if="shipping_address.country_id">(
                                            <span t-field="shipping_address.country_id.name"/>
                                            )
                                        </t>
                                        <br/>
                                    </t>
                                </td>
                            </tr>
                            <tr t-if="shipping_address.phone">
                                <td>
                                    <span>Phone</span>
                                </td>
                                <td>
                                    <span t-field="shipping_address.phone"/>
                                </td>
                            </tr>
                            <tr t-if="shipping_address.mobile">
                                <td>
                                    <span>Mobile</span>
                                </td>
                                <td>
                                    <span t-field="shipping_address.mobile"/>
                                </td>
                            </tr>
                            <tr t-if="shipping_address.fax">
                                <td>
                                    <span>Fax</span>
                                </td>
                                <td>
                                    <span t-field="shipping_address.fax"/>
                                </td>
                            </tr>
                            <tr t-if="shipping_address.email">
                                <td>
                                    <span>Email</span>
                                </td>
                                <td>
                                    <span t-field="shipping_address.email"/>
                                </td>
                            </tr>
                            <tr t-if="shipping_address.website">
                                <td>
                                    <span>Website</span>
                                </td>
                                <td>
                                    <span t-field="shipping_address.website"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="col-xs-4">
                    <table class="table table-condensed table-unstyled">
                        <tbody>
                            <tr>
                                <td colspan="2">
                                    <strong>Supplier</strong>
                                </td>
                            </tr>
                            <tr t-if="o.partner_id">
                                <td style="width: 25%;">
                                    <span>Partner</span>
                                </td>
                                <td style="width: 75%;">
                                    <span t-if="o.partner_id.name"
                                          t-field="o.partner_id.name"/>
                                    <br/>
                                </td>
                            </tr>
                            <tr t-if="o.partner_id.vat">
                                <td>
                                    <span>VAT</span>
                                </td>
                                <td>
                                    <span t-field="o.partner_id.vat"/>
                                </td>
                            </tr>
                            <tr t-if="o.partner_id">
                                <td>
                                    <span>Address</span>
                                </td>
                                <td>
                                    <t t-if="o.partner_id.street">
                                        <span t-field="o.partner_id.street"/>
                                        <br/>
                                    </t>
                                    <t t-if="o.partner_id.street2">
                                        <span t-field="o.partner_id.street2"/>
                                        <br/>
                                    </t>
                                    <t t-if="o.partner_id.zip or o.partner_id.city">
                                        <t t-if="o.partner_id.zip">
                                            <span t-field="o.partner_id.zip"/>
                                        </t>
                                        <t t-if="o.partner_id.city">
                                            <span t-field="o.partner_id.city"/>
                                        </t>
                                        <br/>
                                    </t>
                                    <t t-if="o.partner_id.state_id or o.partner_id.country_id">
                                        <t t-if="o.partner_id.state_id">
                                            <span t-field="o.partner_id.state_id.name"/>
                                        </t>
                                        <t t-if="o.partner_id.country_id">(
                                            <span t-field="o.partner_id.country_id.name"/>
                                            )
                                        </t>
                                        <br/>
                                    </t>
                                </td>
                            </tr>
                            <tr t-if="o.partner_id.phone">
                                <td>
                                    <span>Phone</span>
                                </td>
                                <td>
                                    <span t-field="o.partner_id.phone"/>
                                </td>
                            </tr>
                            <tr t-if="o.partner_id.mobile">
                                <td>
                                    <span>Mobile</span>
                                </td>
                                <td>
                                    <span t-field="o.partner_id.mobile"/>
                                </td>
                            </tr>
                            <tr t-if="o.partner_id.fax">
                                <td>
                                    <span>Fax</span>
                                </td>
                                <td>
                                    <span t-field="o.partner_id.fax"/>
                                </td>
                            </tr>
                            <tr t-if="o.partner_id.email">
                                <td>
                                    <span>Email</span>
                                </td>
                                <td>
                                    <span t-field="o.partner_id.email"/>
                                </td>
                            </tr>
                            <tr t-if="o.partner_id.website">
                                <td>
                                    <span>Website</span>
                                </td>
                                <td>
                                    <span t-field="o.partner_id.website"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </template>

        <!-- LÃ­neas de Presupuesto/Pedido Compra -->
        <template id="purchaseorder_lines">
            <div class="row">
                <div class="col-xs-12">
                    <table class="table lines">
                        <thead>
                            <tr>
                                <th>Description</th>
                                <th>Taxes</th>
                                <th class="text-center">Qty</th>
                                <th class="text-center">Price</th>
                                <th class="text-center"
                                    groups="sale.group_discount_per_so_line">
                                    Disc.(%)
                                </th>
                                <th class="text-center">Amount</th>
                            </tr>
                        </thead>
                        <tbody class="sale_tbody">
                            <tr t-foreach="o.order_line" t-as="l">
                                <td>
                                    <span t-field="l.name"/>
                                </td>
                                <td>
                                    <span t-esc="', '.join(map(lambda x: x.name, l.taxes_id))"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="l.product_qty"/>
                                    <span groups="product.group_uom"
                                          t-field="l.product_uom"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="l.price_unit"/>
                                </td>
                                <td class="text-right"
                                    groups="sale.group_discount_per_so_line">
                                    <span t-field="l.discount"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="l.price_subtotal"
                                          t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </template>
        <!-- Totales de Presupuesto/Pedido Compra -->
        <template id="purchaseorder_totals">
            <div class="row">
                <div class="col-xs-5 pull-right">
                    <table class="table totals">
                        <tr class="border-black">
                            <td>
                                <strong>Total Without Taxes</strong>
                            </td>
                            <td class="text-right">
                                <span t-field="o.amount_untaxed"
                                      t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                            </td>
                        </tr>
                        <tr>
                            <td>Taxes</td>
                            <td class="text-right">
                                <span t-field="o.amount_tax"
                                      t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                            </td>
                        </tr>
                        <tr class="border-black">
                            <td>
                                <strong>Total</strong>
                            </td>
                            <td class="text-right">
                                <span t-field="o.amount_total"
                                      t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </template>

        <!-- Pie Presupuesto/Pedido Compra -->
        <template id="purchaseorder_footer">
            <div class="row">
                <div class="col-xs-12">
                    <p t-if="'payment_mode_id' in o and o.payment_mode_id">
                        <strong>Payment Mode</strong>:
                        <span t-field="o.payment_mode_id.name"/>
                    </p>
                    <p t-if="'payment_mode_id' in o and o.payment_term_id">
                        <strong>Payment Term</strong>:
                        <span t-field="o.payment_term_id"/>
                    </p>
                    <p t-if="o.notes">
                        <strong>Comment</strong>
                        <br/>
                        <span t-field="o.notes"/>
                    </p>
                </div>
            </div>
        </template>

        <!-- Presupuesto/Pedido Compra -->
        <template id="report_purchaseorder_print_formats_purchase_document">
            <t t-call="print_formats_base.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <t t-call="print_formats_base.report_styles"/>
                    <t t-call="print_formats_purchase.purchaseorder_header"/>
                    <t t-call="print_formats_purchase.purchaseorder_subheader"/>
                    <t t-call="print_formats_purchase.purchaseorder_lines"/>
                    <t t-call="print_formats_purchase.purchaseorder_totals"/>
                    <t t-call="print_formats_purchase.purchaseorder_footer"/>
                    <div class="oe_structure"/>
                </div>
            </t>
        </template>

        <!-- Herencia Informe Presupuesto/Pedido Compra -->
        <template id="report_purchaseorder_print_formats_sale"
                  inherit_id="purchase.report_purchaseorder" priority="20">
            <xpath expr="//*[contains(@t-call, 'report.html_container')]"
                   position="replace">
                <t t-call="report.html_container">
                    <t t-foreach="docs" t-as="doc">
                        <t t-raw="translate_doc(doc.id, doc_model, 'partner_id.lang', 'print_formats_purchase.report_purchaseorder_print_formats_purchase_document')"/>
                    </t>
                </t>
            </xpath>
        </template>

    </data>
</openerp>
