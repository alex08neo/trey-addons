<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="product_form_view_sale_order_button" model="ir.ui.view">
            <field name="model">product.product</field>
            <field name="inherit_id" ref="sale.product_form_view_sale_order_button"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='buttons']" position="inside">
                    <button class="oe_inline oe_stat_button" name="action_view_quotation_sales"
                        type="object" icon="fa-strikethrough">
                        <field string="Quotations" name="quotation_sales_count" widget="statinfo"/>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
