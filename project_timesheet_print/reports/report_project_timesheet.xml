<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Formato Parte de Trabajo Proyecto -->
        <template id="report_project_timesheet">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-raw="translate_doc(doc.id, doc_model, 'partner_id.lang', 'project_timesheet_print.report_project_timesheet_document')"/>
                </t>
            </t>
        </template>

        <!-- Formato Documento Parte de Trabajo Proyecto -->
        <template id="report_project_timesheet_document">
            <t t-call="report.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="row">
                        <div class="col-xs-12">
                            <h2>
                                <span t-field="o.name"/>
                            </h2>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6">
                            <p>
                                <t t-if="o.project_id">
                                    <span>Project:</span>
                                    <span t-field="o.project_id.name"/><br/>
                                </t>
                                <t t-if="o.partner_id">
                                    <span>Partner:</span>
                                    <span t-field="o.partner_id.name"/><br/>
                                </t>
                                <t t-if="o.user_id">
                                    <span>Asigned to:</span>
                                    <span t-field="o.user_id.name"/><br/>
                                </t>
                                <t t-if="o.reviewer_id">
                                    <span>Reviewer:</span>
                                    <span t-field="o.reviewer_id.name"/><br/>
                                </t>
                                <t t-if="o.date_start">
                                    <span>Start Date:</span>
                                    <span t-field="o.date_start" t-field-options='{"widget":"date"}'/><br/>
                                </t>
                                <t t-if="o.date_deadline">
                                    <span>Deadline Date:</span>
                                    <span t-field="o.date_deadline" t-field-options='{"widget":"date"}'/><br/>
                                </t>
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <t t-if="o.description">
                                <p><strong>Description</strong></p>
                                <div t-field="o.description"/>
                            </t>
                         </div>
                    </div>
                </div>
            </t>
        </template>

    </data>
</openerp>
