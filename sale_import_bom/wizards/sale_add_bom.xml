<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="wiz_sale_import_bom" model="ir.ui.view" >
            <field name="name">Add BoM</field>
            <field name="model">wiz.sale_import_bom</field>
            <field name="arch" type="xml">
                <form string="Add BoM">
                    <group>
                        <field name="bom_id" required="1"/>
                        <field name="quantity" required="1"/>
                        <field name="only_import_products"/>
                    </group>
                    <footer>
                        <button name="button_add" class="oe_highlight" type="object" string="Accept" />
                        or
                        <button class="oe_link" special="cancel" string="Cancel" />
                    </footer>
                </form>
            </field>
        </record>

    </data>
</openerp>
