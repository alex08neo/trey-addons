<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

         <record id="view_partner_warning_project_form" model="ir.ui.view">
            <field name="name">res.partner.warning.project.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@string='Warnings']" position="inside">
                    <group colspan="2" col="2">
                        <separator string="Warning on the Task Project" colspan="4"/>
                            <field name="task_warn" nolabel="1" />
                            <field name="task_warn_msg" colspan="3" nolabel="1"
                                    attrs="{'required':[('task_warn','!=','no-message')],'readonly':[('task_warn','=','no-message')]}"/>
                    </group>
                    <group colspan="2" col="2">
                        <separator string="Warning on the Issue Project" colspan="4"/>
                            <field name="issue_warn" nolabel="1" />
                            <field name="issue_warn_msg" colspan="3" nolabel="1"
                                    attrs="{'required':[('issue_warn','!=','no-message')],'readonly':[('issue_warn','=','no-message')]}"/>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
