<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <template id="assets_frontend" inherit_id="website.assets_frontend" name="MyAccount Assets Frontend">
            <xpath expr="." position="inside">
                <link href="/website_myaccount/static/src/css/website_myaccount.less" rel="stylesheet" type="text/less"/>
                <script src="/website_myaccount/static/src/js/website_myaccount.js" type="text/javascript"></script>
            </xpath>
        </template>

        <template id="layout" inherit_id="website.layout" name="MyAccount Layout">
            <xpath expr="//a[contains(@href, '/web')]" position="attributes">
                <attribute name="href">/my/home</attribute>
            </xpath>
        </template>

    </data>
</openerp>
