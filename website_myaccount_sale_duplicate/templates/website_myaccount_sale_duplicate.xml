<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="orders" inherit_id="website_myaccount_sale.orders">
            <xpath expr="//td[last()]" position="before">
                <td class="text-center">
                    <a class="btn btn-xs" t-attf-href="/my/orders/duplicate/#{order.id}">
                        <span class="label label-default"><i class="glyphicon glyphicon-shopping-cart"></i> Duplicate</span>
                    </a>
                </td>
            </xpath>
            <xpath expr="//th[last()]" position="before">
                <th style="width: 10%;" class="text-center">Duplicate</th>
            </xpath>
        </template>
    </data>
</openerp>
