<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="product_zoom_grab" inherit_id="website_sale.product" active="False" customize_show="True" name="Zoom Grab">
            <xpath expr="//span[@itemprop='image']" position="attributes">
                <attribute name="data-zoom">grab</attribute>
            </xpath>
        </template>
        <template id="product_zoom_click" inherit_id="website_sale.product" active="False" customize_show="True" name="Zoom Click">
            <xpath expr="//span[@itemprop='image']" position="attributes">
                <attribute name="data-zoom">click</attribute>
            </xpath>
        </template>
        <template id="product_zoom_toggle" inherit_id="website_sale.product" active="False" customize_show="True" name="Zoom Toggle">
            <xpath expr="//span[@itemprop='image']" position="attributes">
                <attribute name="data-zoom">toggle</attribute>
            </xpath>
        </template>
    </data>
</openerp>
