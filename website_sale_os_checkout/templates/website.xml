<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
	<template id="assets_frontend" inherit_id="website.assets_frontend" name="One Step Checkout"
			  priority="900">
		<xpath expr="." position="inside">
			<link rel="stylesheet"
				  href="/website_sale_os_checkout/static/src/css/website_sale_os_checkout.css"/>
			<script type="text/javascript"
					src="/website_sale_os_checkout/static/src/js/website_sale_os_checkout.js"></script>
			<script type="text/javascript"
					src="/website_sale_os_checkout/static/src/js/website_sale_os_checkout_tour.js"></script>
		</xpath>
	</template>

	<template id="footer_terms" inherit_id="website.footer_default" name="Footer Terms">
		<xpath expr="//ul[@id='products']/li" position="inside">
			<li>
				<a href="/page/terms_and_conditions/">Terms &amp; Conditions</a>
			</li>
		</xpath>
	</template>
</data>
</openerp>
