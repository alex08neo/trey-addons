<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="product" inherit_id="website_sale.product">
            <xpath expr="//*[contains(@id, 'add_to_cart')]" position="after">
                <hr>
                    <h4>Stock location:</h4>
                    <p>Rack: <span t-field="product.loc_rack"/></p>
                    <p>Row: <span t-field="product.loc_row"/></p>
                    <p>Case: <span t-field="product.loc_case"/></p>
                </hr>
            </xpath>
        </template>
    </data>
</openerp>
