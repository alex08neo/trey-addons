<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="assets_frontend" inherit_id="website.assets_frontend">
            <xpath expr="." position="inside">
                <link href="/website_sale_shop_by_grid/static/src/css/website_sale_shop_by_grid.css" rel="stylesheet"/>
                <script src="/website_sale_shop_by_grid/static/src/js/website_sale_shop_by_grid.js" type="text/javascript"/>
            </xpath>
        </template>
        <template id="layout" inherit_id="website.layout">
            <xpath expr="//div[contains(@id, 'wrapwrap')]" position="inside">
                <div class="js_wssg_loading hidden">
                    <div class="js_wssg_spinner">
                        <img src="/website_sale_shop_by_grid/static/src/img/throbber.gif" width="16" height="16"/>
                        <span>Loading...</span>
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</openerp>

