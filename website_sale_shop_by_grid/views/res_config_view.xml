<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_sales_config" model="ir.ui.view">
            <field name="model">sale.config.settings</field>
            <field name="inherit_id" ref="sale.view_sales_config"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='module_sale_margin']" position="after">
                    <div>
                        <field name="allow_shopping_with_stock_available" class="oe_inline"/>
                        <label for="allow_shopping_with_stock_available"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
