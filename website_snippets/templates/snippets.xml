<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="snippets" inherit_id="website.snippets">
            <xpath expr="//div[@id='snippet_structure']" position="inside">
                <t t-snippet="website_snippets.one_col" t-thumbnail="/website_snippets/static/src/img/snippet_one_col.png"/>
                <t t-snippet="website_snippets.two_cols" t-thumbnail="/website_snippets/static/src/img/snippet_two_cols.png"/>
                <t t-snippet="website_snippets.three_cols" t-thumbnail="/website_snippets/static/src/img/snippet_three_cols.png"/>
                <t t-snippet="website_snippets.four_cols" t-thumbnail="/website_snippets/static/src/img/snippet_four_cols.png"/>
                <t t-snippet="website_snippets.six_cols" t-thumbnail="/website_snippets/static/src/img/snippet_six_cols.png"/>
                <t t-snippet="website_snippets.twelve_cols" t-thumbnail="/website_snippets/static/src/img/snippet_twelve_cols.png"/>
                <t t-snippet="website_snippets.toc" t-thumbnail="/website_snippets/static/src/img/snippet_toc.png"/>
                <t t-snippet="website_snippets.carousel" t-thumbnail="/website_snippets/static/src/img/snippet_bs_carousel.png"/>
                <t t-snippet="website_snippets.heading_title" t-thumbnail="/website_snippets/static/src/img/snippet_heading_title.png"/>
                <t t-snippet="website_snippets.heading_title_breadcrumb" t-thumbnail="/website_snippets/static/src/img/snippet_heading_title_breadcrumb.png"/>
            </xpath>
        </template>
        <!-- Snippet: One column -->
        <template id="one_col" name="One column">
            <section class="js_ws_snippet_one_col mt32 mb32">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12"><p>1/1</p></div>
                    </div>
                </div>
            </section>
        </template>
        <!-- Snippet: Two columns -->
        <template id="two_cols" name="Two columns">
            <section class="js_ws_snippet_two_cols mt32 mb32">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6"><p>1/2</p></div>
                        <div class="col-md-6"><p>1/2</p></div>
                    </div>
                </div>
            </section>
        </template>
        <!-- Snippet: Three columns -->
        <template id="three_cols" name="Three columns">
            <section class="js_ws_snippet_three_cols mt32 mb32">
                <div class="container">
                    <div class="row">
                        <div class="col-md-4"><p>1/3</p></div>
                        <div class="col-md-4"><p>1/3</p></div>
                        <div class="col-md-4"><p>1/3</p></div>
                    </div>
                </div>
            </section>
        </template>
        <!-- Snippet: Four columns -->
        <template id="four_cols" name="Four columns">
            <section class="js_ws_snippet_four_cols mt32 mb32">
                <div class="container">
                    <div class="row">
                        <div class="col-md-3"><p>1/4</p></div>
                        <div class="col-md-3"><p>1/4</p></div>
                        <div class="col-md-3"><p>1/4</p></div>
                        <div class="col-md-3"><p>1/4</p></div>
                    </div>
                </div>
            </section>
        </template>
        <!-- Snippet: Six columns -->
        <template id="six_cols" name="Six columns">
            <section class="js_ws_snippet_six_cols mt32 mb32">
                <div class="container">
                    <div class="row">
                        <div class="col-md-2"><p>1/6</p></div>
                        <div class="col-md-2"><p>1/6</p></div>
                        <div class="col-md-2"><p>1/6</p></div>
                        <div class="col-md-2"><p>1/6</p></div>
                        <div class="col-md-2"><p>1/6</p></div>
                        <div class="col-md-2"><p>1/6</p></div>
                    </div>
                </div>
            </section>
        </template>
        <!-- Snippet: Twelve columns -->
        <template id="twelve_cols" name="Twelve columns">
            <section class="js_ws_snippet_twelve_cols mt32 mb32">
                <div class="container">
                    <div class="row">
                        <div class="col-md-1"><p>1/12</p></div>
                        <div class="col-md-1"><p>1/12</p></div>
                        <div class="col-md-1"><p>1/12</p></div>
                        <div class="col-md-1"><p>1/12</p></div>
                        <div class="col-md-1"><p>1/12</p></div>
                        <div class="col-md-1"><p>1/12</p></div>
                        <div class="col-md-1"><p>1/12</p></div>
                        <div class="col-md-1"><p>1/12</p></div>
                        <div class="col-md-1"><p>1/12</p></div>
                        <div class="col-md-1"><p>1/12</p></div>
                        <div class="col-md-1"><p>1/12</p></div>
                        <div class="col-md-1"><p>1/12</p></div>
                    </div>
                </div>
            </section>
        </template>
        <!-- Snippet: Table of contents -->
        <template id="toc" name="Table of contents">
            <section class="js_ws_snippet_toc mt32 mb32">
                <div class="container">
                    <div class="o_wbt_toc panel panel-default mt16 mb16">
                        <div class="panel-heading">Table of contents <span class="o_wbt_toc_toggle">[<a class="o_wbt_toc_btn" role="button" data-toggle="collapse" href="#o_wbt_collapse_toc" aria-expanded="false" aria-controls="o_wbt_collapse_toc"><span class="o_wbt_toc_btn_close">close</span><span class="o_wbt_toc_btn_open">open</span></a>]</span></div>
                        <div class="panel-body">
                            <div id="o_wbt_collapse_toc" class="collapse in">
                                <ul class="list-unstyled mb0">
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </template>
        <!-- Snippet: Options: Table of contents -->
        <template id="snippet_options" inherit_id="website.snippet_options">
            <xpath expr="." position="inside">
                <div data-js="js_ws_snippet_toc_options" data-selector=".js_ws_snippet_toc"/>
            </xpath>
        </template>
        <!-- Snippet: Bootstrap Carousel -->
        <template id="carousel" name="Bootstrap Carousel">
            <section class="js_ws_bs_carousel container mt32 mb32">
                <div id="o_ws_bg_carousel" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#o_ws_bg_carousel" data-slide-to="0" class="active"></li>
                        <li data-target="#o_ws_bg_carousel" data-slide-to="1"></li>
                        <li data-target="#o_ws_bg_carousel" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner" role="listbox">
                        <div class="item active">
                            <a href="/"><img class="img img-responsive" src="/website/static/src/img/banner/flower_field.jpg"/></a>
                            <div class="carousel-caption">First slide</div>
                        </div>
                        <div class="item">
                            <a href="/"><img class="img img-responsive" src="/website/static/src/img/banner/flower_field.jpg"/></a>
                            <div class="carousel-caption">Second slide</div>
                        </div>
                        <div class="item">
                            <a href="/"><img class="img img-responsive" src="/website/static/src/img/banner/flower_field.jpg"/></a>
                            <div class="carousel-caption">Third slide</div>
                        </div>
                    </div>
                    <a class="left carousel-control" href="#o_ws_bg_carousel" role="button" data-slide="prev">
                        <span class="fa fa-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#o_ws_bg_carousel" role="button" data-slide="next">
                        <span class="fa fa-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </section>
        </template>
        <!-- Snippet: Options: Bootstrap Carousel -->
        <template id="snippet_options" inherit_id="website.snippet_options">
            <xpath expr="." position="inside">
                <div data-selector=".js_ws_bs_carousel">
                    <li class="dropdown-submenu">
                        <a tabindex="-1" href="#">Layout</a>
                        <ul class="dropdown-menu">
                            <li data-select_class="container"><a>Boxed</a></li>
                            <li data-select_class=""><a>Full width</a></li>
                        </ul>
                    </li>
                </div>
            </xpath>
        </template>
        <!-- Snippet: Heading Title -->
        <template id="heading_title" name="Heading title">
            <section class="o_ws_heading_title">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12 mt48 mb48">
                            <h1 class="text-uppercase mt0 mb0">Heading title</h1>
                        </div>
                    </div>
                </div>
            </section>
        </template>
        <!-- Snippet: Heading Title Breadcrumb -->
        <template id="heading_title_breadcrumb" name="Heading title breadcrumb">
            <section class="o_ws_heading_title_breadcrumb">
                <div class="container">
                    <div class="row mt48 mb48">
                        <div class="col-md-6">
                            <h1 class="text-uppercase mt0 mb0 pull-left">Heading title</h1>
                        </div>
                        <div class="col-md-6">
                            <p class="text-right mb0">
                                <a href="/">Home</a> / Current page
                            </p>
                        </div>
                    </div>
                </div>
            </section>
        </template>
    </data>
</openerp>
